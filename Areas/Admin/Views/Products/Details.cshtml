@model CuaHangDoAn.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryProduct)
        </dt>
        <img class="mt-4" src="@($"/Image/{Model.Image}")" style="width: 200px; height: 130px;" />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryProduct.Name)
        </dd>
    </dl>
</div>
<div class="row col-md-6">
    <a class="btn btn-primary col-md-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary col-3 offset-2" asp-action="Index">Back to List</a>
</div>
